# Node Focus
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Switch Desktop
ctrl + alt + {l,h}
	bspc desktop -f {next,prev}.local

# Focus Last Node
alt + {grave,Tab}
	bspc {node,desktop -f last

# Focus or Send To Desktop
alt + {_,shift +}{1-4}
	bspc {desktop -f,node -d} '^{1-4}'

# Preselect Node
ctrl + super + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Resize Node Inward
super + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Resize Node Outward
super + shift + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Make the node hidden and move it to the `below` layer
#
# This allows fullscreen windows to be hidden without being interrupted by new
# windows in the tile or focus change to floating windows.
alt + y
	bspc node -l below -g hidden

# Unhide and move a previously hidden fullscreen window to the above layer
alt + shift + y
	bspc node $(bspc query -N -n .hidden | tail -n1) -g hidden=off -l above -f

alt + f
	bspc node -t fullscreen

alt + shift + f
	bspc node -t floating

alt + t
	bspc node -t tiled

# Make a window node sticky
alt + s
	bspc node -g sticky

# Move a Floating Node
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Show Menu
alt + space
	rofi -show run

# Show Pass
alt + p
	passmenu

# Mopidy Controls
shift + F6
	mpc toggle

shift + F5
	mpc prev

shift + F7
	mpc next

# Lock Desktop
Pause
	light-locker-command -l

# Suspend Desktop
shift + Pause
	systemctl suspend

# Open Terminal
alt + t
	urxvt

alt + shift + 5
	scrot -s -e mv $f '/home/nomad/Pictures/Screenshots/'

alt + Escape
	pkill -USR1 -x sxhkd
